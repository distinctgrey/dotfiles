[pull]
	rebase = false
[push]
	default = current
	autoSetupRemote = true
	followTags = true
[init]
	defaultBranch = main
[alias]
	st = status -sb
	co = !git add -A && git commit -m
	logs = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	pick = cherry-pick
[core]
	editor = code --wait
